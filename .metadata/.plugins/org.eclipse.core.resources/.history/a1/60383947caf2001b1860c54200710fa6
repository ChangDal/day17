package day_Quiz01;

import java.util.Scanner;

public class Quiz01_funtion {

	Scanner input = new Scanner(System.in);
	

public void remotControl() {
	
	int remot = 0;
	int num = 0;
	remot = input.nextInt();
	
	System.out.println("1.채널 위로 2. 채널아래로 3.채널 입력 4.TV OFF");
	switch(remot)
	{
	case 1:
	num++;
	System.out.println("현재 채널은 : "+num);
	break;
	
	case 2:
	num--;	
	System.out.println("현재 채널은 : "+num);
	break;
	
	case 3:
	num = input.nextInt();
	System.out.println("현재 채널은 : "+num);
	break;
	
	case 4:
	System.out.println("TV 전원을 끕니다");
	break;
	}
	
}
}
